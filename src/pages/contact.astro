---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/about/ContactForm.astro';
import { getTitle } from '../utils/title-manager';
import { getLangFromRequest, useTranslations } from '../i18n/utils';

const lang = getLangFromRequest(Astro);
const t = useTranslations(lang);
const pageTitle = getTitle('contact');
---

<Layout title={pageTitle}>
  <div class="py-12 text-center pt-20">
    <h1 class="animate-title text-4xl font-bold mb-4 font-headings text-secondary-trust">{t('contact.title')}</h1>
    <p class="animate-subtitle text-lg text-gray-600 max-w-2xl mx-auto px-4">{t('contact.desc')}</p>
  </div>
  <ContactForm />
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Title Animation
  gsap.from(".animate-title", {
    y: 30,
    opacity: 0,
    duration: 1,
    ease: "power3.out"
  });
  
  gsap.from(".animate-subtitle", {
    y: 20,
    opacity: 0,
    duration: 1,
    delay: 0.2,
    ease: "power3.out"
  });

  // Contact Form
  gsap.from(".contact-container", {
    scrollTrigger: {
      trigger: ".contact-container",
      start: "top bottom-=100",
      toggleActions: "play none none reverse"
    },
    y: 50,
    opacity: 0,
    duration: 1,
    ease: "power3.out"
  });
</script>
