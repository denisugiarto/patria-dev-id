---
import { events, pastEvents } from '../../data/events';
import Section from '../ui/Section.astro';
import { getLangFromRequest, useTranslations } from '../../i18n/utils';
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';

const lang = getLangFromRequest(Astro);
const t = useTranslations(lang);

// Merge all events for client-side filtering, but mark them
const allEvents = [
  ...events.map(e => ({ ...e, isPast: false })),
  ...pastEvents.map(e => ({ ...e, isPast: true }))
];

const eventTypes = ['Meetup', 'Workshop', 'WFC', 'Hackathon', 'Webinar'];
---

<Section id="event-manager" bg="background" class="py-16">
  <div class="max-w-6xl mx-auto space-y-8">
    
    <!-- Controls Section -->
    <div class="flex flex-col md:flex-row gap-6 justify-between items-center bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
      <!-- Tabs -->
      <div class="flex p-1 bg-gray-100 rounded-xl" id="event-tabs">
        <button 
          class="px-6 py-2 rounded-lg text-sm font-bold transition-all shadow-sm bg-white text-primary" 
          data-tab="upcoming"
        >
          {t('event.tabs.upcoming')}
        </button>
        <button 
          class="px-6 py-2 rounded-lg text-sm font-bold text-gray-500 hover:text-gray-700 transition-all" 
          data-tab="past"
        >
          {t('event.tabs.past')}
        </button>
      </div>

      <!-- Filters -->
      <div class="flex flex-col sm:flex-row gap-4 w-full md:w-auto">
        <div class="relative">
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input 
            type="text" 
            id="event-search" 
            placeholder={t('event.search.placeholder')} 
            class="pl-10 pr-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 w-full sm:w-64"
          />
        </div>
        
        <select id="event-filter" class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary/50 text-gray-600">
          <option value="all">{t('event.filter.all')}</option>
          {eventTypes.map(type => (
            <option value={type}>{type}</option>
          ))}
        </select>
      </div>
    </div>

    <!-- Events Grid -->
    <div id="events-grid" class="space-y-6">
      {allEvents.map((event) => (
        <div 
          class="event-card group bg-white p-6 md:p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all duration-300 flex flex-col md:flex-row gap-6 items-start md:items-center"
          data-type={event.type}
          data-status={event.isPast ? 'past' : 'upcoming'}
          data-title={event.title.toLowerCase()}
          data-date={event.isoDate}
        >
          <div class="md:w-1/4 flex flex-col items-center md:items-start text-center md:text-left">
            <div class="text-primary font-bold text-xl mb-1">{event.date}</div>
            <div class="text-gray-500 text-sm mb-3">{event.time}</div>
            {event.image && (
              <div class="w-full h-32 md:h-24 rounded-lg overflow-hidden mt-2 relative">
                <img 
                  src={event.image} 
                  alt={event.title}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                  loading="lazy"
                />
                {event.isPast && <div class="absolute inset-0 bg-gray-900/10"></div>}
              </div>
            )}
          </div>
          
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <span class={`text-xs font-bold px-3 py-1 rounded-full ${
                event.isPast 
                  ? 'bg-gray-100 text-gray-500' 
                  : event.type === 'Meetup' ? 'bg-green-100 text-green-600' 
                  : event.type === 'Workshop' ? 'bg-blue-100 text-blue-600' 
                  : event.type === 'WFC' ? 'bg-orange-100 text-orange-600' 
                  : 'bg-purple-100 text-purple-600'
              }`}>
                {event.type}
              </span>
              <span class="text-xs text-gray-500 flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                {event.location}
              </span>
            </div>
            <h3 class={`text-xl font-bold mb-2 ${event.isPast ? 'text-gray-600' : 'text-secondary-trust'}`}>{event.title}</h3>
            <p class="text-gray-600 text-sm">{(event.desc && event.desc.includes('.')) ? t(event.desc as any) : event.desc}</p>
          </div>
          
          <div class="w-full md:w-auto mt-4 md:mt-0">
            {event.isPast ? (
               <span class="inline-flex items-center px-4 py-2 rounded-full border border-gray-200 text-gray-400 font-medium text-sm">
                 {t('event.completed')}
               </span>
            ) : (
              <Button 
                size="sm"
                disabled={event.status !== 'Open'}
                class="w-full md:w-auto"
              >
                {event.status === 'Open' ? t('event.register') : t('event.soon')}
              </Button>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- No Results State -->
    <div id="no-results" class="hidden text-center py-12">
      <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
      <p class="text-gray-500 font-medium">{t('event.no_results')}</p>
    </div>

    <!-- Pagination / Load More (Mock) -->
    <div class="text-center pt-8 hidden" id="load-more-container">
      <Button variant="outline">
        {t('event.load_more')}
      </Button>
    </div>
  </div>
</Section>

<script>
  // Client-side filtering logic
  const tabs = document.querySelectorAll('[data-tab]');
  const searchInput = document.getElementById('event-search') as HTMLInputElement;
  const typeFilter = document.getElementById('event-filter') as HTMLSelectElement;
  const eventsGrid = document.getElementById('events-grid');
  const cards = document.querySelectorAll('.event-card');
  const noResults = document.getElementById('no-results');

  let currentTab = 'upcoming';

  function filterEvents() {
    const searchTerm = searchInput.value.toLowerCase();
    const selectedType = typeFilter.value;
    let visibleCount = 0;

    cards.forEach(card => {
      const el = card as HTMLElement;
      const status = el.dataset.status;
      const type = el.dataset.type;
      const title = el.dataset.title || '';
      
      const matchesTab = status === currentTab;
      const matchesSearch = title.includes(searchTerm);
      const matchesType = selectedType === 'all' || type === selectedType;

      if (matchesTab && matchesSearch && matchesType) {
        el.style.display = 'flex';
        // Add animation class if needed
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
        visibleCount++;
      } else {
        el.style.display = 'none';
        el.style.opacity = '0';
        el.style.transform = 'translateY(10px)';
      }
    });

    if (noResults) {
      noResults.classList.toggle('hidden', visibleCount > 0);
    }
  }

  // Event Listeners
  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Update UI
      tabs.forEach(t => {
        t.classList.remove('bg-white', 'text-primary', 'shadow-sm');
        t.classList.add('text-gray-500');
      });
      tab.classList.add('bg-white', 'text-primary', 'shadow-sm');
      tab.classList.remove('text-gray-500');

      // Update State
      currentTab = (tab as HTMLElement).dataset.tab || 'upcoming';
      filterEvents();
    });
  });

  searchInput?.addEventListener('input', filterEvents);
  typeFilter?.addEventListener('change', filterEvents);

  // Initial Filter
  filterEvents();
</script>
